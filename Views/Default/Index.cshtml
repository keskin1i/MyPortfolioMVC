
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js ss-preload" lang="en">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Luther</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Temp/luther-1.0.0/css/vendor.css">
    <link rel="stylesheet" href="~/Temp/luther-1.0.0/css/styles.css">

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Temp/luther-1.0.0/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Temp/luther-1.0.0/favicon-16x16.png">
    <link rel="manifest" href="site.webmanifest">

</head>

<body id="top">


    <!-- # preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader">
        </div>
    </div>


    <!-- # page wrap
    ================================================== -->
    <div class="s-pagewrap">

        <div class="circles">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>


        <!-- ## site header
        ================================================== -->
        <header class="s-header">

            <div class="header-mobile">
                <span class="mobile-home-link"><a href="index.html">M.Ertuğrul</a></span>
                <a class="mobile-menu-toggle" href="#0"><span>Menu</span></a>
            </div>

            <div class="row wide main-nav-wrap">
                <nav class="column lg-12 main-nav">
                    <ul>
                        <li><a href="#current" class="home-link">M.Ertuğrul</a></li>
                        <li><a href="#about" class="smoothscroll">Hakkımda</a></li>
                        <li><a href="#experience" class="smoothscroll">Deneyİmlerİm</a></li>
                        <li><a href="#works" class="smoothscroll">Projelerİm</a></li>
                        <li><a href="#contact" class="smoothscroll">İLETİŞİM</a></li>
                    </ul>
                </nav>
            </div>

        </header> <!-- end s-header -->
        <!-- ## main content
        ==================================================- -->
        <main class="s-content">


            <!-- ### intro
            ================================================== -->
           @Html.Action("DefaultBanner")
            <!-- ### about
            ================================================== -->
            <section id="about" class="s-about target-section">


                <div class="row about-info wide" data-animate-block>

                    <div class="column lg-6 md-12 about-info__pic-block">
                        <img src="~/Temp/images/about-photo.jpg"
                             srcset="~/Temp/luther-1.0.0/images/about-photo.jpg 1x, ~/Temp/luther-1.0.0/images/about-photo@2x.jpg 2x" alt="" class="about-info__pic" data-animate-el>
                    </div>

                    <div class="column lg-6 md-12">
                        <div class="about-info__text">

                            <h2 class="text-pretitle with-line" data-animate-el>
                                About
                            </h2>
                            <p class="attention-getter" data-animate-el>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                                tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
                                veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex
                                ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate
                                velit esse cillum dolore eu fugiat nulla pariatur.
                            </p>
                            <a href="#0" class="btn btn--medium u-fullwidth" data-animate-el>Download CV</a>

                        </div>
                    </div>
                </div> <!-- about-info -->


               @Html.Action("DefaultExpertise")


                <div class="row about-timelines" data-animate-block>

                   @Html.Action("DefaultExperience")

                    @Html.Action("DefaultEducation") <!-- end column -->


                </div> <!-- end about-timelines -->

            </section> <!-- end s-about -->
            <!-- ### works
            ================================================== -->
            <section id="works" class="s-works target-section">


                <div class="row works-portfolio">

                   @Html.Action("DefaultProject")<!-- end column -->
                    <!-- Modal Templates Popup
                    -------------------------------------------- -->
                    @*@Html.ActionLink("DefaultProjectDetail","Default")*@
                <!-- end modal -->

                   
                </div> <!-- end works-portfolio -->

            @Html.Action("DefaultTestimonial");
              <!-- end row testimonials -->

            </section> <!-- end s-works -->
            <!-- ### contact
            ================================================== -->
            <section id="contact" class="s-contact target-section">

                <div class="row contact-top">
                    <div class="column lg-12">
                        <h2 class="text-pretitle">
                            İletİŞİM Bilgileri
                        </h2>

                        <p class="h1">
                          Soru ve Önerileriniz için Mesaj Atabilirsiniz.
                        </p>
                    </div>
                </div> <!-- end contact-top -->

                <div class="row contact-bottom">
                    <div class="column lg-3 md-5 tab-6 stack-on-550 contact-block">
                       @Html.Action("DefaultContact")
                    </div>
                    <div class="column lg-4 md-5 tab-6 stack-on-550 contact-block">
                       @Html.Action("DefaultSocialMedia")
                    </div>
                    <div class="column lg-4 md-12 contact-block">
                        <a href="mailto:sayhello@luther.com" class="mailtoui btn btn--medium u-fullwidth contact-btn">Say Hello.</a>
                    </div>
                </div> <!-- end contact-bottom -->

            </section> <!-- end contact -->

        </main> <!-- end s-content -->
        <!-- ## footer
        ================================================== -->
        <footer class="s-footer">

            <div class="row">
                <div class="column ss-copyright">
                    <span>©Tüm Hakları Saklıdır 2024</span>
                    <span>Oluşturan <a href="https://themewagon.com">M.Ertuğrul Keskin</a></span>
                </div>

                <div class="ss-go-top">
                    <a class="smoothscroll" title="Back to Top" href="#top">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill-rule="evenodd" clip-rule="evenodd"><path d="M11 2.206l-6.235 7.528-.765-.645 7.521-9 7.479 9-.764.646-6.236-7.53v21.884h-1v-21.883z" /></svg>
                    </a>
                </div>
            </div>

        </footer> <!-- end s-footer -->

    </div> <!-- end -s-pagewrap -->
    <!-- Java Script
    ================================================== -->
    <script src="~/Temp/luther-1.0.0/js/plugins.js"></script>
    <script src="~/Temp/luther-1.0.0/js/main.js"></script>

</body>
</html>