<h2 class="text-center mb-4">Profil Bilgilerini Güncelleme</h2>

<form method="post" enctype="multipart/form-data" class="form-container">
    <div class="form-group mb-3">
        <label>Profil Resmi</label>
        <div>
            <img src="@Model.ImageUrl" style="width:150px;height:150px; object-fit: cover;" class="rounded-circle" alt="Profil Resmi" />
        </div>
    </div>

    <div class="form-group mb-3">
        <label>Profil Resmi Yükleyin</label>
        <input type="file" name="ImageFile" class="form-control-file" />
    </div>

    <div class="form-group mb-3">
        <label>Ad</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group mb-3">
        <label>Soyad</label>
        <input type="text" name="SurName" class="form-control" value="@Model.SurName" />
    </div>

    <div class="form-group mb-3">
        <label>Email</label>
        <input type="email" name="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="form-group mb-3">
        <label>Şifreyi Girin</label>
        <input type="password" name="Password" class="form-control" />
    </div>

    <div class="form-group text-center">
        <p style="color:red">@Html.ValidationSummary();</p>
        <button class="btn btn-outline-primary btn-lg">Bilgilerini Güncelle</button>
    </div>
</form>

<!-- CSS ile görünümü güzelleştiriyoruz -->
<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color: black;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .form-control-file {
        border: none;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
    }

    .btn-outline-primary {
        background-color: transparent;
        border-color: red;
        color: red;
    }

    .btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .rounded-circle {
        border-radius: 50%;
    }

    h2 {
        font-size: 2rem;
        color: #333;
    }
</style>
